<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextDlgStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <style name="AnimationDlgStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="ResourcePreviewStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="alivc_svideo_effect_tab">
        <item name="android:paddingLeft">@dimen/alivc_common_padding_20</item>
        <item name="android:paddingRight">@dimen/alivc_common_padding_20</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/alivc_common_font_11</item>
        <item name="android:drawablePadding">@dimen/alivc_svideo_tab_tv_iv_distance</item>
    </style>
</resources>